#!/bin/bash

echo_red()
{
  set_red
  echo "$@"
  reset_colors
}

set_red()
{
  echo -ne "\033[31;1m"
}

set_background_red()
{
  echo -ne "\033[41;1m"
}

set_light_red()
{
  echo -ne "\033[91;1m"
}

