}

set_light_yellow()
{
  echo -ne "\033[93;1m"
}

set_white()
{
  echo -ne "\033[37;1m"
}

set_background_white()
{
  echo -ne "\033[47;1m"
}

echo_light_white()
{
  set_light_white
  echo "$@"
  reset_colors
}

set_light_white()
{
  echo -ne "\033[97;1m"
}

reset_colors()
{
  echo -ne "\033[0m"
}
