  echo "$@"
  reset_colors
}

set_green()
{
  echo -ne "\033[32;1m"
}

set_background_green()
{
  echo -ne "\033[42;1m"
}

set_light_green()
{
  echo -ne "\033[92;1m"
}

echo_yellow()
{
  set_yellow
  echo "$@"
  reset_colors
}

